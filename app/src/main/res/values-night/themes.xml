<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timetable" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_blue</item>
        <item name="colorPrimaryVariant">@color/grey_top</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Background">
        <item name="android:background">@color/black</item>
    </style>

    <style name="BackgroundLine">
        <item name="android:background">@color/grey_top_darker</item>
    </style>

    <style name="Primary">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Secondary">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="RoundedBackground">
        <item name="android:background">@drawable/background_rounded</item>
        <item name="android:backgroundTint">@color/darker_grey</item>
    </style>
</resources>